load("@io_bazel_rules_go//go:def.bzl", "go_binary", "go_library")
load("@rules_oci//oci:defs.bzl", "oci_image", "oci_load")
load("@rules_pkg//pkg:tar.bzl", "pkg_tar")

go_library(
    name = "cmd_lib",
    srcs = ["main.go"],
    importpath = "github.com/Shulammite-Aso/bazel-demo-app/cmd",
    visibility = ["//visibility:public"],
    deps = [
        "//bazel",
        "//handlers",
        "@com_github_antchfx_xmlquery//:xmlquery",
        "@com_github_bgentry_go_netrc//:netrc",
        "@com_github_bwmarrin_snowflake//:snowflake",
        "@com_github_google_uuid//:uuid",
        "@com_github_gorilla_mux//:mux",
        "@com_github_sirupsen_logrus//:logrus",
    ],
)

go_binary(
    name = "cmd",
    embed = [":cmd_lib"],
    visibility = ["//visibility:public"],
)

go_library(
    name = "lib",
    srcs = ["main.go"],
    importpath = "",
    visibility = ["//visibility:private"],
    deps = [
        "@com_github_antchfx_xmlquery//:xmlquery",
        "@com_github_bgentry_go_netrc//:netrc",
        "@com_github_bwmarrin_snowflake//:snowflake",
        "@com_github_google_uuid//:uuid",
        "@com_github_gorilla_mux//:mux",
        "@com_github_shulammite_aso_bazel_demo_app//handlers:go_default_library",
        "@com_github_sirupsen_logrus//:logrus",
    ],
)

pkg_tar(
    name = "cmd_layer",
    srcs = [":cmd"],
)

oci_image(
    name = "image",
    base = "@distroless_base",
    entrypoint = ["/cmd"],
    tars = [":cmd_layer"],
)

oci_load(
    name = "image_tarball",
    image = ":image",
    repo_tags = ["bazel-demo-app:latest"],
)
